import os

FILE_NAME = "tasks.txt"

def load_tasks():
    if not os.path.exists(FILE_NAME):
        return []
    with open(FILE_NAME, "r") as file:
        return [task.strip() for task in file.readlines()]

def save_tasks(tasks):
    with open(FILE_NAME, "w") as file:
        for task in tasks:
            file.write(task + "\n")

def show_tasks(tasks):
    if not tasks:
        print("\nâœ… No tasks found!")
        return
    print("\nğŸ“Œ Your Tasks:")
    for i, task in enumerate(tasks, start=1):
        print(f"{i}. {task}")

def add_task(tasks):
    task = input("\nâ• Enter new task: ")
    tasks.append(task)
    save_tasks(tasks)
    print("âœ… Task added successfully!")

def delete_task(tasks):
    show_tasks(tasks)
    if not tasks:
        return
    try:
        num = int(input("\nâŒ Enter task number to delete: "))
        removed = tasks.pop(num - 1)
        save_tasks(tasks)
        print(f"ğŸ—‘ï¸ Task '{removed}' deleted!")
    except (ValueError, IndexError):
        print("âš ï¸ Invalid task number!")

def menu():
    print("\n====== TO-DO LIST MENU ======")
    print("1. View Tasks")
    print("2. Add Task")
    print("3. Delete Task")
    print("4. Exit")

def main():
    tasks = load_tasks()

    while True:
        menu()
        choice = input("Choose an option (1-4): ")

        if choice == "1":
            show_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            delete_task(tasks)
        elif choice == "4":
            print("\nğŸ‘‹ Goodbye! Stay productive.")
            break
        else:
            print("âš ï¸ Invalid choice! Try again.")

if __name__ == "__main__":
    main()
